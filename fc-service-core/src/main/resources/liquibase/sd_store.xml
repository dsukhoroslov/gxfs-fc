<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet author="fhg" id="2022-08-05-sdfiles">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="sdfiles" />
            </not>
        </preConditions>
        <createTable tableName="sdfiles">
            <column name="sdhash" type="java.sql.Types.VARCHAR(64)">
                <constraints primaryKey="true" primaryKeyName="sdfiles_pkey" nullable="false"/>
            </column>
            <column name="subject" type="java.sql.Types.VARCHAR(255)">
                <constraints  nullable="false" />
            </column>
            <column name="issuer" type="java.sql.Types.VARCHAR(255)"/>
            <column name="uploadtime" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="now()">
                <constraints nullable="false" />
            </column>
            <column name="statustime" type="TIMESTAMP WITH TIME ZONE" defaultValueComputed="now()">
                <constraints nullable="false" />
            </column>
            <column name="status" type="java.sql.Types.INTEGER">
                <constraints nullable="false" />
            </column>
        </createTable>
        <sql dbms="postgresql">create unique index idx_sd_file_is_active on sdfiles(subject) where status=0</sql>
        
        <createTable tableName="validators">
            <column name="sdhash" type="java.sql.Types.VARCHAR(64)">
                <constraints nullable="false" />
            </column>
            <column name="validator" type="java.sql.Types.VARCHAR(256)">
                <constraints nullable="false" />
            </column>
        </createTable>
        <addPrimaryKey tableName="validators" columnNames="sdhash,validator" constraintName="validators_pkey" />
        <addForeignKeyConstraint
            constraintName="validators_sdhash_fkey"
            baseTableName="validators" baseColumnNames="sdhash"
            referencedTableName="sdfiles" referencedColumnNames="sdhash"
            onDelete="CASCADE" onUpdate="CASCADE" />
    </changeSet>

</databaseChangeLog>

